{
  "name": "clear-wallet",
  "version": "1.4.17",
  "private": true,
  "description": "Clear Wallet (CLW) is a wallet that helps you manage your Ethereum assets and interact with Ethereum dApps and contracts with the main focus on absolute privacy.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "inject": "esbuild src/extension/inject.ts --outfile=src/extension/inject.js --bundle --format=esm --platform=browser",
    "content": "esbuild src/extension/content.ts --outfile=src/extension/content.js --bundle --format=esm --platform=browser",
    "post-build": "tsx ./release-scripts/post-build.ts",
    "build": "npm run inject && npm run content && vue-tsc --noEmit && vite build && npm run post-build",
    "rebuild": "npm run build && tsx ./release-scripts/create-release.ts rebuild",
    "preview": "vite preview",
    "release": "tsx ./release-scripts/version-release.ts",
    "postversion": "git push",
    "pub": "npm run build && npm run release && tsx ./release-scripts/create-release.ts",
    "only-pub": "npm run build && tsx ./release-scripts/create-release.ts"
  },
  "dependencies": {
    "@ethereumjs/tx": "^5.4.0",
    "@ionic/vue": "8.4.2",
    "@ionic/vue-router": "8.4.2",
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "axios": "^1.8.4",
    "buffer": "^6.0.3",
    "core-js": "^3.41.0",
    "ethers": "^6.13.5",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0",
    "vue-virtual-scroller": "^2.0.0-beta.8",
    "web3": "^4.16.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.30",
    "@types/archiver": "^6.0.3",
    "@types/chrome": "^0.0.308",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-typescript": "^14.5.0",
    "archiver": "^7.0.1",
    "esbuild": "^0.25.8",
    "eslint": "^9.21.0",
    "eslint-plugin-vue": "^10.0.0",
    "http-browserify": "^1.7.0",
    "https-browserify": "^1.0.0",
    "jest": "^29.7.0",
    "sass": "^1.85.1",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.2.6",
    "tsx": "^4.20.3",
    "typescript": "^5.8.2",
    "util": "^0.12.5",
    "vite": "^6.2.0",
    "vue-tsc": "^2.2.8"
  },
  "disabledNativeDependencies": {
    "@capacitor/app": "^5.0.6",
    "@capacitor/core": "^5.2.3",
    "@capacitor/haptics": "^5.0.6",
    "@capacitor/keyboard": "^5.0.6",
    "@capacitor/status-bar": "^5.0.6"
  },
  "packageManager": "yarn@1.22.21+sha512.ca75da26c00327d26267ce33536e5790f18ebd53266796fbb664d2a4a5116308042dd8ee7003b276a20eace7d3c5561c3577bdd71bcb67071187af124779620a"
}
